<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="52dp">

    <TextView
        android:id="@+id/item_vehicle_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="B-GO2346"/>


    <TextView
        android:id="@+id/item_vehicle_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_vehicle_card_number"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="Grillparz Str 4"/>


    <ImageView
        android:id="@+id/img_vehicle_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_marginTop="28dp"
        android:layout_toLeftOf="@+id/item_vehicle_distance"
        android:src="@drawable/ic_cancel_black_18dp"/>

    <TextView
        android:id="@+id/item_vehicle_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="50m"/>


    <TextView
        android:id="@+id/item_vehicle_energy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_vehicle_distance"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="78%"/>

</RelativeLayout>