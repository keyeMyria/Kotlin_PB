    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="${appIcon}"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:transitionName="mego">


        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDneT1ZlJJOpWSNhBbpWCROFt_YLLp9v9o"/>

        <!--The activity handling all pre loading logic-->
        <activity
            android:name=".features.app_launch.presentation.SplashActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".views.activities.MeGoActivity"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="80cd075afc807571ba1a825571d08f1bb7e2b77a"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>